<div class="login">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_with scope: :session, url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username, class: 'form-control', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
