<% if profile.errors.full_messages.any? %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h2><%= title %></h2>
<%= form_with scope: :profile, url: edit_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Name:' %>
    <%= f.text_field :name, class: "form-control", placeholder: "Jhon Doe" %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Description:' %>
    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "something interesting about you" %>
  </div>
  <div class="form-group">
    <%= f.label :image_url, 'Image URL:' %>
    <%= f.url_field :image_url, class: "form-control", placeholder: "https://images.com/profile.png" %>
  </div>
  <div class="form-group">
    <%= f.label :twitter, 'Twitter URL:' %>
    <%= f.url_field :twitter, class: "form-control", placeholder: "https://twitter.com/username" %>
  </div>
  <%= f.submit action, class: "btn btn-primary"%>
  <%= link_to "Cancel", root_path, class: "btn btn-default" %>

<% end %>
